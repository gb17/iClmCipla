<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cirrius.iclmcipla.MainActivity" >

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:background="#848484" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
           android:paddingTop="40dp"
           android:textSize="24sp"
           android:paddingLeft="20dp"
            android:text="PHYSICIANS"
            android:textColor="@color/black" />
         <TextView
             android:id="@+id/txt35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_toLeftOf="@+id/txt34"
           android:layout_marginTop="20dp"
           android:textSize="24sp"
           android:paddingLeft="20dp"
            android:text=""
            android:textColor="@color/green" />
          <TextView
              android:id="@+id/txt34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
           android:paddingTop="20dp"
           android:paddingRight="20dp"
           android:textSize="24sp"
            android:text=""
            android:textColor="@color/white" />
           <TextView
              android:id="@+id/txt36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt35"
        android:layout_alignParentRight="true"
           android:textSize="15sp"
            android:paddingRight="20dp"
            android:text="Physician"
            android:textColor="@color/black" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/rel" >

        <ListView
            android:id="@+id/mainList"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:childDivider="#949494"
            android:divider="#949494"
            android:dividerHeight="1dp"
            android:groupIndicator="@null" >
        </ListView>

        <ListView
            android:id="@+id/alphaList"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#848484"
            android:childDivider="#949494"
            android:divider="#949494"
            android:dividerHeight="1dp"
            android:groupIndicator="@null" >
        </ListView>
    </LinearLayout>

</RelativeLayout><!-- From: file:/home/admin/AndroidstudioProjects/iClmCipla/app/src/main/res/layout/physicianlistview.xml -->