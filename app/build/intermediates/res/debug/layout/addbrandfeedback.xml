<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <TextView
        android:id="@+id/tetxaddbrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Add Brand to Feedback"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cross"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="9dip"
        android:text="@string/icon_cross"
        android:textColor="#212121"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textSelectBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tetxaddbrand"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Select Brand"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/spineerrrrr"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textSelectBrand"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:entries="@array/SelectBrand" />

    <Button
        android:id="@+id/butonadfb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spineerrrrr"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_roundedgray"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:text="Add Brand"
        android:textColor="#ffffff" />

</RelativeLayout><!-- From: file:/home/admin/AndroidstudioProjects/iClmCipla/app/src/main/res/layout/addbrandfeedback.xml -->