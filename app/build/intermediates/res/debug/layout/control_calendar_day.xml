<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:background="@drawable/border"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="gone" />

    <TextView
        android:id="@+id/dot1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:text="@string/icon_circle"
        android:textColor="#76ff03"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/dot2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/dot1"
        android:text="@string/icon_circle"
        android:textColor="#ff3d00"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="4dp"
        android:text="01"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/head1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:paddingLeft="4dp"
        android:text="Bronx"
        android:textSize="12sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/head1count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/head1"
        android:paddingLeft="4dp"
        android:text="2"
        android:textSize="12sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/head2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head1"
        android:layout_marginTop="-4dp"
        android:paddingLeft="4dp"
        android:text="Brooklyn"
        android:textSize="12sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/head2count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head1count"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="-4dp"
        android:layout_toRightOf="@+id/head2"
        android:paddingLeft="4dp"
        android:text="3"
        android:textSize="12sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/notice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:gravity="bottom"
        android:text="00"
        android:textAlignment="center"
        android:textSize="14sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/remin"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:gravity="bottom"
        android:src="@drawable/reminder"
        android:visibility="gone" />

    <TextView
        android:id="@+id/todayindicator"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/croner"
        android:textSize="20sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tot"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:background="@drawable/orange_round"
        android:gravity="center"
        android:text="HO"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/threepatch"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:gravity="center"
        android:text=". . ."
        android:textColor="#9e9e9e"
        android:textSize="22sp"
        android:textStyle="bold"
        android:visibility="invisible" />

</RelativeLayout><!-- From: file:/home/admin/AndroidstudioProjects/iClmCipla/app/src/main/res/layout/control_calendar_day.xml -->