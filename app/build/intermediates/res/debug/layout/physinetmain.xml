<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="1dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:background="@android:color/white"
    android:minHeight="810dp" >

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="PHYZIINET"
        android:textColor="#2E2E2E"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textview"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal" >

        <ListView
            android:id="@+id/listview"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:divider="@android:color/transparent" />

        <RelativeLayout
            android:id="@+id/rel2"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:paddingLeft="1dp"
            android:paddingTop="10dp" >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/plus" >

                <LinearLayout
                    android:id="@+id/lineartp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="2dp"
                    android:background="#9e9e9e"
                    android:orientation="vertical"
                    android:paddingLeft="1dp"
                    android:paddingRight="10dp" >

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_weight="1"
                            android:paddingLeft="10dp"
                            android:text="30 july 2015"
                            android:textColor="@android:color/white"
                            android:textStyle="italic" />
                    </TableRow>

                    <TextView
                        android:id="@+id/txtrt34"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:text="Liam Neeson"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="10dp"
                        android:text="Your request for samples has been approved"
                        android:textColor="@android:color/white"
                        android:textStyle="italic" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:background="#eeeeee" />

                    <TextView
                        android:id="@+id/text6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:text="Reply :"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/doted"
                        android:hint="+ Type your message "
                        android:textColor="@android:color/white"
                        android:textColorHint="#FFFFFF" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" 
                        android:layout_marginBottom="10dip">

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_roundedgray"
                           
                            android:text="Cancel"
                          
                            
                             android:layout_marginRight="5dip"
                              android:layout_marginLeft="10dip"
                            android:textColor="@android:color/white"
                            android:textStyle="italic" />

                        <Button
                            android:id="@+id/bt1athach"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_roundedgray"
                          
                            android:text="Attach"
                            android:layout_marginRight="5dip"
                              android:layout_marginLeft="5dip"
                            android:textColor="@android:color/white"
                            android:textStyle="italic" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_roundedgray"
                       
                            android:layout_marginRight="5dip"
                              android:layout_marginLeft="5dip"
                            android:text="Send"
                            android:textColor="@android:color/white"
                            android:textStyle="italic" />
                    </TableRow>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout><!-- From: file:/home/admin/AndroidstudioProjects/iClmCipla/app/src/main/res/layout/physinetmain.xml -->