<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#484848"
    android:baselineAligned="false"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#e0e0e0"
        android:visibility="gone" >

        <TextView
            android:id="@+id/today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="Today"
            android:textColor="#FF0000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/addappointmentplus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/view"
            android:gravity="center_vertical"
            android:text="@string/icon_add"
            android:textSize="24sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/menu"
            android:background="#000000" />

        <TextView
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:text="@string/icon_three_dot"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@+id/progress"
            android:text="SCORE"
            android:textColor="#000000"
            android:textSize="14sp" />

        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/today"
            android:max="10"
            android:progress="5"
            android:progressDrawable="@drawable/newprogress_set" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/progress"
            android:layout_centerVertical="true"
            android:layout_marginLeft="160dp"
            android:layout_toRightOf="@id/today"
            android:gravity="center"
            android:paddingTop="3dp"
            android:text="5"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/listfordoc1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <EditText
                android:id="@+id/serch"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_rounded"
                android:drawableLeft="@drawable/ic_action_searchb"
                android:hint="search" />

            <TextView
                android:id="@+id/selall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/serch"
                android:text="@string/icon_check"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/selall"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/serch"
                android:text="Select All"
                android:textColor="#FFFFFF"
                android:visibility="gone" />

            <TextView
                android:id="@+id/found"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/box"
                android:text="12"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/found2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/found"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/box"
                android:text="Found"
                android:textColor="#FFFFFF"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/listfordoc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/serch" >
            </RelativeLayout>
        </RelativeLayout>

        <com.cirrius.iclmcipla.CalendarView
            xmlns:calendarNS="http://schemas.android.com/apk/res/samples.aalamir.customcalendar"
            android:id="@+id/calendar_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:layout_weight="2"
            android:background="@android:color/white"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" />
    </LinearLayout>

</LinearLayout><!-- From: file:/home/admin/AndroidstudioProjects/iClmCipla/app/src/main/res/layout/calendar.xml -->