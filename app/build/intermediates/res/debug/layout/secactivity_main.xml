<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="1dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:background="@android:color/white"
    android:minHeight="810dp" >

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="ACTION POINTS"
        android:textColor="#2E2E2E"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textview"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal" >

        <ListView
            android:id="@+id/listview"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:divider="@android:color/transparent" />

        <RelativeLayout
            android:id="@+id/rel2"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:paddingLeft="1dp" >

            <TextView
                android:id="@+id/plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/icon_add"
                android:textColor="#2E2E2E"
                android:textSize="28sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/history"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="30dp"
                android:layout_toLeftOf="@id/plus"
                android:src="@drawable/history_icon" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/plus" >

                <LinearLayout
                    android:id="@+id/lineartp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="2dp"
                    android:background="#9e9e9e"
                    android:orientation="vertical"
                    android:paddingLeft="1dp"
                    android:paddingRight="10dp" >

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_weight="1"
                            android:paddingLeft="10dp"
                            android:text="30 july 2015"
                            android:textColor="@android:color/white"
                            android:textStyle="italic" />

                        <TextView
                            android:id="@+id/editpencil"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:paddingLeft="10dp"
                            android:text="@string/icon_pencil"
                            android:textColor="@android:color/white"
                            android:textSize="24sp"
                            android:textStyle="italic" />
                    </TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:text="Dr. Alan Spiegel"
                        android:textColor="@android:color/white"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="Samples | C-Fix ,Mezzo drop,Solsuna +2"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:paddingLeft="10dp"
                        android:text="Need more samples"
                        android:textColor="@android:color/white"
                        android:textStyle="italic" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:background="#eeeeee" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#bdbdbd"
                        android:paddingRight="5dp" >

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="10dp"
                            android:text="Assigned to :"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="10dp"
                            android:text="Assigned on \n 5 July 15"
                            android:textColor="@android:color/white"
                            android:textStyle="italic" />

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/text1"
                            android:paddingLeft="10dp"
                            android:text="Finanace Support"
                            android:textColor="@android:color/white"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/text2"
                            android:paddingLeft="10dp"
                            android:text="finanacesupport@pharma.co"
                            android:textColor="@android:color/white"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/text4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/text3"
                            android:layout_marginTop="15dp"
                            android:paddingLeft="10dp"
                            android:text="Assigned to Department:"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/text4"
                            android:paddingBottom="10dp"
                            android:paddingLeft="10dp"
                            android:text="Finanace"
                            android:textColor="@android:color/white"
                            android:textStyle="normal" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/text6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:text="Conversation Stream :"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/doted"
                        android:hint="+ Type your message "
                        android:textColor="@android:color/white"
                        android:textColorHint="#FFFFFF" />

                    <RelativeLayout
                        android:id="@+id/fwdmsg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/bg_doted_with_color" >

                        <TextView
                            android:id="@+id/text7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="10dp"
                            android:text="Brand_document20080915.pdf[Link]"
                            android:textColor="#00b0ff"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/attach"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/addfrnd"
                            android:layout_weight="1"
                            android:text="@string/icon_paperclip"
                            android:textColor="#9e9e9e"
                            android:textSize="28sp" />

                        <TextView
                            android:id="@+id/addfrnd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_weight="1"
                            android:text="@string/icon_addpro"
                            android:textColor="#9e9e9e"
                            android:textSize="28sp" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/text10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text4"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:text="From: Finanace | 13 JULY 2015"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:textStyle="italic" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/bg_broderforedittext"
                        android:padding="10dp" >

                        <TextView
                            android:id="@+id/text11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="10dp"
                            android:text="Take this file it explains"
                            android:textColor="#424242"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/text14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text4"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:text="From: Finanace |  18 JULY 2015"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:textStyle="italic" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/bg_broderforedittext"
                        android:padding="10dp" >

                        <TextView
                            android:id="@+id/text16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="10dp"
                            android:text="I am waithing for reply"
                            android:textColor="#9e9e9e"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/addfrnd18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_weight="1"
                            android:text="@string/icon_addpro"
                            android:textColor="#9e9e9e"
                            android:textSize="28sp" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/text19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/addfrnd18"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:text="From: Finanace | 12 JULY 2015"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:textStyle="italic" />
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </LinearLayout>

