<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <!-- date toolbar -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp" >

        <RelativeLayout
            android:id="@+id/relone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/todocount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:gravity="center"
                android:text="02"
                android:textColor="#424242"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/headertextview2223"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/todocount"
                android:gravity="top"
                android:text="Missed Calls"
                android:textColor="#424242"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_height="50sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/relone"
            android:background="#424242" />

        <RelativeLayout
            android:id="@+id/reltwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/view" >

            <TextView
                android:id="@+id/patc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:gravity="center"
                android:text="02"
                android:textColor="#424242"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/patchheader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/patc"
                android:gravity="top"
                android:text="Missed Patches"
                android:textColor="#424242"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="1dp"
            android:layout_height="50sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/reltwo"
            android:background="#424242" />

        <RelativeLayout
            android:id="@+id/relthree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/view1" >

            <TextView
                android:id="@+id/uplancount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:gravity="center"
                android:text="02"
                android:textColor="#424242"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/unplanheade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/uplancount"
                android:gravity="top"
                android:text="Unplanned"
                android:textColor="#424242"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="1dp"
            android:layout_height="50sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/relthree"
            android:background="#424242" />

        <RelativeLayout
            android:id="@+id/relfouracxtionpoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/view2" >

            <TextView
                android:id="@+id/todocount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="13"
                android:textColor="#424242"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/chkboxcal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/todocount1"
                android:gravity="center"
                android:text="@string/icon_check"
                android:textColor="#424242"
                android:textSize="24sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view3"
            android:layout_width="1dp"
            android:layout_height="50sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="#424242"
            android:visibility="gone" />
        <!-- prev button -->

        <ImageView
            android:id="@+id/calendar_prev_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="3dp"
            android:layout_toLeftOf="@+id/calendar_date_display"
            android:src="@drawable/previous_icon" />

        <!-- date title -->

        <TextView
            android:id="@+id/calendar_date_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/calendar_next_button"
            android:gravity="bottom"
            android:text="current date"
            android:textColor="#757575"
            android:textSize="24sp" />

        <!-- next button -->

        <ImageView
            android:id="@+id/calendar_next_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="85dp"
            android:layout_marginTop="3dp"
            android:layout_toLeftOf="@+id/plus"
            android:src="@drawable/next_icon" />

        <TextView
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:text="@string/icon_plus"
            android:textColor="#464646"
            android:textSize="28sp" />

        <ImageView
            android:id="@+id/threedottxt"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/dotted_img"
            android:visibility="gone" />
    </RelativeLayout>

    <!-- days header -->

    <LinearLayout
        android:id="@+id/calendar_header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Sun"
            android:textColor="#9e9e9e"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Mon"
            android:textColor="#9e9e9e"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Tue"
            android:textColor="#9e9e9e"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Wed"
            android:textColor="#9e9e9e"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Thu"
            android:textColor="#9e9e9e"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Fri"
            android:textColor="#9e9e9e"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Sat"
            android:textColor="#9e9e9e"
            android:textSize="20sp" />
    </LinearLayout>

    <GridView
        android:id="@+id/calendar_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#9e9e9e"
        android:numColumns="7" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/undo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:paddingLeft="15dp"
            android:src="@drawable/undo"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:paddingLeft="15dp"
            android:src="@drawable/cancelnew"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:paddingLeft="15dp"
            android:src="@drawable/donenew"
            android:visibility="gone" />

        <!-- <TextView -->
        <!-- android:layout_width="wrap_content" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:layout_marginRight="15dp" -->
        <!-- android:background="@drawable/bg_roundedgraywithoutpadding" -->
        <!-- android:paddingLeft="15dp" -->
        <!-- android:paddingRight="15dp" -->
        <!-- android:text="SAVE" -->
        <!-- android:textColor="#FFFFFF" -->
        <!-- android:textSize="18sp" /> -->
    </LinearLayout>

</LinearLayout>