<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_roundedwhite" >

    <TextView
        android:id="@+id/crossvb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/icon_cross"
        android:textColor="#6B6B6B"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="TAG Physicians"
        android:textColor="#6B6B6B"
        android:textSize="24sp" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tag"
        android:background="#5C5C5C" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view"
        android:background="#FFFFFF"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/first"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#484848"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Search Physician to TAG"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#616161" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/second"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#E0E0E0"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="TAG Physicians"
                android:textColor="#616161"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/third"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Add Unlisted"
                android:textColor="#616161"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Patch*"
                android:textColor="#212121"
                android:textSize="18sp"
                android:textStyle="italic" />

            <Spinner
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/drop_down_bg"
                android:entries="@array/patch" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="20dp"
                android:background="#000000" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="85dp"
                        android:layout_marginTop="20dp"
                        android:text="Physician&apos;s Name*"
                        android:textColor="#212121"
                        android:textSize="18sp"
                        android:textStyle="italic" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.7" />

                        <EditText
                            android:id="@+id/edit1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_weight="9"
                            android:background="@drawable/edit_text_bg"
                            android:paddingLeft="10dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="85dp"
                        android:layout_marginTop="20dp"
                        android:text="Speciality*"
                        android:textColor="#212121"
                        android:textSize="18sp"
                        android:textStyle="italic" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/move1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="2"
                            android:background="@drawable/bg_roundedgray"
                            android:src="@drawable/ic_chevron_left_white_24dp" />

                        <Spinner
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="9"
                            android:background="@drawable/drop_down_bg"
                            android:entries="@array/speciality" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_margin="20dp"
                        android:background="#E0E0E0" />

                    <TextView
                        android:id="@+id/v1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="85dp"
                        android:layout_marginTop="20dp"
                        android:text="Physician&apos;s Name*"
                        android:textColor="#212121"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/v2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.7" />

                        <EditText
                            android:id="@+id/edit2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_weight="9"
                            android:background="@drawable/edit_text_bg"
                            android:paddingLeft="10dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/v3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="85dp"
                        android:layout_marginTop="20dp"
                        android:text="Speciality*"
                        android:textColor="#212121"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/v4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <ImageView
                            android:id="@+id/move2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="2"
                            android:background="@drawable/bg_roundedgray"
                            android:src="@drawable/ic_chevron_left_white_24dp" />

                        <Spinner
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="9"
                            android:background="@drawable/drop_down_bg"
                            android:entries="@array/speciality" />
                    </LinearLayout>

                    <View
                        android:id="@+id/v5"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_margin="20dp"
                        android:background="#E0E0E0"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.7" />

                        <TextView
                            android:id="@+id/add_unlisted"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="9"
                            android:background="@drawable/doted_gray"
                            android:drawableEnd="@drawable/plus123"
                            android:drawableRight="@drawable/plus123"
                            android:text="Add Unlisted"
                            android:textColor="#E8E8E8"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>