<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#464646"
    android:padding="20dp" >

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Closure of AP "
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/chkboxd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/header"
        android:text="@string/icon_check"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/reasons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_marginTop="15dp"
        android:text="Reason"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="italic" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/reasons"
        android:background="@drawable/bg_broder_grey"
        android:entries="@array/closureap" />

    <TextView
        android:id="@+id/doneap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_roundedwhite_transpareent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="DONE"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</RelativeLayout>