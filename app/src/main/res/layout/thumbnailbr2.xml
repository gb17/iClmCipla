<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="213dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_broderfor_tumbnail"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/infofromtumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="4dp"
        android:text="@string/icon_info"
        android:textColor="#bdbdbd"
        android:textSize="34sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/cficx1"
        android:layout_width="213dp"
        android:layout_height="136dp"
        android:layout_below="@+id/infofromtumbnail"
        android:background="@drawable/newace" />

    <TextView
        android:layout_width="41dp"
        android:layout_height="26dp"
        android:layout_marginTop="112dp"
        android:background="#80000000"
        android:gravity="center"
        android:text="04"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="167dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/playlist_icon" />

    <RelativeLayout
        android:id="@+id/relativeforpage"
        android:layout_width="213dp"
        android:layout_height="42dp"
        android:layout_below="@+id/cficx1"
        android:background="#CDCDCD"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/seq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:includeFontPadding="false"
            android:text="Acenomorol"
            android:textColor="#1e1e1e"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/threedot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="26dp"
            android:text="..."
            android:textColor="#1e1e1e"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/desc1"
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/seq"
            android:includeFontPadding="false"
            android:text="lorem ipsum dolor"
            android:textColor="#000000"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/desc2"
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/desc1"
            android:text="dolor sit amet"
            android:textColor="#000000"
            android:textSize="16sp"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mask1"
        android:layout_width="213dp"
        android:layout_height="136dp"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF" >

        <LinearLayout
            android:id="@+id/retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_roundeddown"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/icon_download"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginLeft="-10dp"
                android:text="RETRY"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:max="100"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>