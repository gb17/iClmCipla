<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/infofromtumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="4dp"
        android:text="@string/icon_info"
        android:textColor="#bdbdbd"
        android:textSize="34sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/cficx1"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/infofromtumbnail" />

    <RelativeLayout
        android:id="@+id/relativeforpage"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cficx1"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="4dp" >

        <TextView
            android:id="@+id/seq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingTop="6dp"
            android:text="Page 1"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/desc1"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/seq"
            android:includeFontPadding="false"
            android:text="lorem ipsum dolor"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/desc2"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/desc1"
            android:text="dolor sit amet"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/desc3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="100dp"
            android:src="@drawable/emailicon"
            android:visibility="visible" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/relativeforpage"
        android:layout_marginBottom="10dp"
        android:background="#eeeeee"
        android:paddingLeft="30dp"
        android:paddingRight="30dp" />

</RelativeLayout>
