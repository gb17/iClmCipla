<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_margin="10dp"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/dr_image"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/doc1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/dr_image"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Dr. Alan Spiegel"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/speciality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Bronx Blvd"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/dr_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Cardiologist  |  Class - B"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal" />
        </LinearLayout>

        <TextView
            android:id="@+id/threedot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:paddingBottom="10dp"
            android:text="@string/icon_three_dot"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@id/threedot"
            android:text="@string/icon_map"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@id/map"
            android:text="SCORE"
            android:textColor="#000000"
            android:textSize="14sp"
            android:visibility="invisible" />

        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/score"
            android:max="10"
            android:progress="5"
            android:progressDrawable="@drawable/newprogress_set"
            android:visibility="invisible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/progress"
            android:layout_centerVertical="true"
            android:layout_marginRight="150dp"
            android:layout_toLeftOf="@id/score"
            android:text="5"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="invisible" />
    </RelativeLayout>

    <TextView
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/relative"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text="@string/icon_arrowright"
        android:textColor="#808080"
        android:textSize="28sp"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/next" >

        <LinearLayout
            android:id="@+id/linselction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/playlisrel"
                android:layout_width="200dp"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="PLAYLIST"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/tab1"
                    android:background="#BDBDBD" />

                <View
                    android:id="@+id/tab11"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_below="@+id/view1"
                    android:background="#757575" >
                </View>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tab2"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="HISTORY"
                    android:textColor="#808080"
                    android:textSize="20sp" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/tab2"
                    android:background="#BDBDBD" />

                <View
                    android:id="@+id/tab22"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_below="@+id/view2"
                    android:background="#757575"
                    android:visibility="invisible" >
                </View>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tab3"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="ACTION POINTS"
                    android:textColor="#808080"
                    android:textSize="20sp" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/tab3"
                    android:background="#BDBDBD" />

                <View
                    android:id="@+id/tab33"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_below="@+id/view3"
                    android:background="#757575"
                    android:visibility="invisible" >
                </View>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/tab4"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="SCHEDULE"
                    android:textColor="#808080"
                    android:textSize="20sp" />

                <View
                    android:id="@+id/view4"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/tab4"
                    android:background="#BDBDBD" />

                <View
                    android:id="@+id/tab44"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_below="@+id/view4"
                    android:background="#757575"
                    android:visibility="invisible" >
                </View>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/tab5"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="EVENTS"
                    android:textColor="#808080"
                    android:textSize="20sp" />

                <View
                    android:id="@+id/view5"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/tab5"
                    android:background="#BDBDBD" />

                <View
                    android:id="@+id/tab55"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_below="@+id/view5"
                    android:background="#757575"
                    android:visibility="invisible" >
                </View>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/tab6"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="CAMPAIGN"
                    android:textColor="#808080"
                    android:textSize="20sp" />

                <View
                    android:id="@+id/view6"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/tab6"
                    android:background="#BDBDBD" />

                <View
                    android:id="@+id/tab66"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_below="@+id/view6"
                    android:background="#757575"
                    android:visibility="invisible" >
                </View>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tab7"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="PROFILE"
                    android:textColor="#808080"
                    android:textSize="20sp" />

                <View
                    android:id="@+id/view7"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/tab7"
                    android:background="#BDBDBD" />

                <View
                    android:id="@+id/tab77"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_below="@+id/view7"
                    android:background="#757575"
                    android:visibility="invisible" >
                </View>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tab8"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="CONNECT"
                    android:textColor="#808080"
                    android:textSize="20sp" />

                <View
                    android:id="@+id/view8"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/tab8"
                    android:background="#BDBDBD" />

                <View
                    android:id="@+id/tab88"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_below="@+id/view8"
                    android:background="#757575"
                    android:visibility="invisible" >
                </View>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tab9"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="FOCUS BRANDS"
                    android:textColor="#808080"
                    android:textSize="20sp" />

                <View
                    android:id="@+id/view9"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/tab9"
                    android:background="#BDBDBD" />

                <View
                    android:id="@+id/tab99"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_below="@+id/view9"
                    android:background="#757575"
                    android:visibility="invisible" >
                </View>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tab10"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="PRESCRIPTION"
                    android:textColor="#808080"
                    android:textSize="20sp" />

                <View
                    android:id="@+id/view10"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/tab10"
                    android:background="#BDBDBD" />

                <View
                    android:id="@+id/tab100"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_below="@+id/view10"
                    android:background="#757575"
                    android:visibility="invisible" >
                </View>
            </RelativeLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scroll"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="10dp"
        android:text="PLAYLIST"
        android:textColor="#2E2E2E"
        android:textSize="24sp" />

    <com.cirrius.iclmcipla.CustomScrollViewInventory
        android:id="@+id/physiscroll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/textview" >

        <LinearLayout
            android:id="@+id/mainfrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" />
    </com.cirrius.iclmcipla.CustomScrollViewInventory>

</RelativeLayout>