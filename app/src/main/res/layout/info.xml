<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/planned"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="#848484"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="Planned"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/planned"
            android:gravity="center"
            android:text="@string/icon_pencil"
            android:textSize="24sp" />

        <View
            android:id="@id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/planned"
            android:background="#757575" />

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view"
            android:layout_marginTop="40dp"
            android:text="Goal"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt1"
            android:layout_marginTop="5dp"
            android:text="Brand Promotion C-FIX"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt2"
            android:layout_marginTop="40dp"
            android:text="Date"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt3"
            android:layout_marginTop="5dp"
            android:text="30 SEP 2015"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt2"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="40dp"
            android:text="Duration"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txt6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt5"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="5dp"
            android:text="All Day Event"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt6"
            android:layout_marginTop="40dp"
            android:text="Brand"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txt8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt7"
            android:layout_marginTop="5dp"
            android:text="C-FIX"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt8"
            android:layout_marginTop="40dp"
            android:text="Location :"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txt10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt9"
            android:layout_marginTop="5dp"
            android:text="JC Auditorium, Brooklyn"
            android:textSize="20sp"
            android:textStyle="normal" />
    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#757575" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/actual"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="#848484"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="Actual"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/edit2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/actual"
            android:gravity="center"
            android:text="@string/icon_pencil"
            android:textSize="24sp" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/actual"
            android:background="#757575" />

        <TextView
            android:id="@+id/txt11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view2"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="40dp"
            android:text="Photos"
            android:textSize="20sp"
            android:textStyle="italic" />

        <GridView
            android:id="@+id/photos"
            android:layout_width="wrap_content"
            android:layout_height="360dp"
            android:layout_below="@id/txt11"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:horizontalSpacing="2dp"
            android:listSelector="@android:color/transparent"
            android:numColumns="3"
            android:scrollbars="none"
            android:verticalSpacing="2dp" />

        <TextView
            android:id="@+id/add"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_below="@id/photos"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/doted_gray"
            android:gravity="center"
            android:text="+"
            android:textColor="@android:color/darker_gray"
            android:textSize="34sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@id/add"
            android:layout_below="@id/photos"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/photo33" />
    </RelativeLayout>

</LinearLayout>